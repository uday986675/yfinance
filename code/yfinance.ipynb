import yfinance as yf

data = yf.download('AAPL', start = '2024-01-01', end='2025-01-01')
print(data.head())

print(data.columns)

data.isnull().sum()

import pandas as pd
import numpy as np

data = data.dropna()
data['return'] = data['Close'].pct_change()
data['ma_10'] = data['Close'].rolling(10).mean()
data = data.dropna()

from sklearn.preprocessing import MinMaxScaler

scaler = MinMaxScaler()
scaled_data = scaler.fit_transform(data[['Close']])

train_size = int(len(scaled_data)*0.8)
train_data, test_data = scaled_data[:train_size], scaled_data[train_size:]

import tensorflow as tf
from tensorflow.keras import Sequential
from tensorflow.keras.layers import LSTM, Dense

# Prepare sequences
window_size = 50
X, y = [], []
series = scaled_data

for i in range(len(series)-window_size):
    X.append(series[i:i+window_size])
    y.append(series[i+window_size])

X, y = np.array(X), np.array(y)
X = X.reshape(X.shape[0], X.shape[1], 1)

# Train/Test split
train_size = int(len(X)*0.8)
X_train, y_train = X[:train_size], y[:train_size]
X_test, y_test = X[train_size:], y[train_size:]


# Model
model = Sequential([
    LSTM(64, return_sequences=True, input_shape=(window_size, 1)),
    LSTM(32, return_sequences=True),
    LSTM(16),
    Dense(1)
])
model.compile(optimizer="adam", loss="mse")
model.fit(X_train, y_train, epochs=50, batch_size=16, validation_split=0.2)

print("Shape of X_test after split:", X_test.shape)
print("Shape of y_test after split:", y_test.shape)
print("Are there any NaNs in X_test:", np.isnan(X_test).any())
print("Are there any Infs in X_test:", np.isinf(X_test).any())
print("Are there any NaNs in y_test:", np.isnan(y_test).any())
print("Are there any Infs in y_test:", np.isinf(y_test).any())

loss = model.evaluate(X_test, y_test)
print('loss:', loss)

import matplotlib.pyplot as plt

y_pred = model.predict(X_test)

y_true = scaler.inverse_transform(y_test.reshape(-1, 1))
y_pred = scaler.inverse_transform(y_pred)


plt.figure(figsize=(10, 5))
plt.plot(y_true, label='Actual')
plt.plot(y_pred, label='Predicted')
plt.legend()
plt.title('Actual vs Predicted')
plt.show()